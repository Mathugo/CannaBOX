#:import Label kivy.core.text.Label

#:set TempLabel Label(text="Temperature\n{}\u00B0C", font_size=25, color=(1,1,0.5,1), halign="center")
#:set HygroLabel Label(text="Humidity\n{}%", font_size=25, color=(1,1,0.5,1), halign="center")


<MenuScreen>:
    name: "menu"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/plant.jpg'
    Label:
        text: "Tomato session"
        font_name: "QuickSand"
        bold: "true"
        font_size: 55
        color: 1, 1, 0, 1
        pos_hint: {'center_x':.5, 'center_y':.9}
    Label:
        text: "Day 1"
        halign: "center"
        font_name: "Cantarell"
        bold: "true"
        font_size: 60
        color: 1,0.8,0,1
        pos_hint: {'center_x': .5, 'center_y': .5}
    FloatLayout:
        CircularProgressBar:
            id: cpT
            size_hint: (None, None)
            height: 300
            width: 300
            max: 40
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1, 1, 0
            cap_style: "SqUArE"
            cap_precision:3
            thickness: 3
            pos_hint: {'x': .15, 'center_y': .5}
            label: TempLabel
    FloatLayout:
        CircularProgressBar:
            id: cpH
            size_hint: (None, None)
            height: 300
            width: 300
            max: 100
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1,1,0
            cap_style: "SqUArE"
            cap_precision:3
            thickness: 3
            pos_hint: {'center_x': .85, 'center_y': .5}
            label: HygroLabel
    FloatLayout:
        Button:
            size_hint: 0.1, 0.04
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.95, 'center_y':.85}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/settings.PNG'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Button:
            size_hint: 0.1, 0.04
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.95, 'center_y':.90}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/home.PNG'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Button:
            size_hint: 0.1, 0.04
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.95, 'center_y':.95}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/menu.PNG'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
