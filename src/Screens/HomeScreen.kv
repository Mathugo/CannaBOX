<DashBoard>:
    size_hint: None, None
    Image:
        source: '../assets/Home/menu_home.png'
        size_hint: None, None
        size: (300, 600)
            #    size: self.parent.size # So we don't have to change it every time, change the size above only
        pos_hint: {'center_x': -1.5, 'center_y': 3}
    Button: # GRAPH
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: 0.55, 0.15
        pos_hint: {'center_x': .01, 'center_y': .75}
        on_release:app.sm.current = "graph"
    Button: # Schedule
        background_normal: ''
        background_color: 0, 0, 0, 0
        size_hint: 0.55, 0.15
        pos_hint: {'center_x': .01, 'center_y': .58}
        on_release:app.sm.current = "schedule"

    Button: # Timelapse
        background_normal: ''
        background_color: 0, 0, 0, 0
        size_hint: 0.55, 0.15
        pos_hint: {'center_x': .01, 'center_y': .42}
        on_release:app.sm.current = "timelapse"
    Button: # Setting
        background_normal: ''
        background_color: 0, 0, 0, 0
        size_hint: 0.55, 0.15
        pos_hint: {'center_x': .01, 'center_y': .25}
        on_release:app.sm.current = "settings"




<HomeScreen>:
    name: "home"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../img/background_logo.png'
    Label:
        text: "Nique ta mere"
        font_name: "Roboto"
        bold: "true"
        font_size: 55
        color: 1, 1, 0, 1
        pos_hint: {'center_x':.5, 'center_y':.9}
    Label:
        text: "Day 1"
        halign: "center"
        font_name: "Roboto"
        font_size: 30
        color: 1,0.8,0,1
        pos_hint: {'center_x': .5, 'center_y': .5}

    FloatLayout:
        Button:
            background_normal: ''
            background_color: 0,0,0,0
            pos_hint: {'center_x': .05, 'center_y': .9}
            size_hint: 0.13, 0.2
            on_release:
                root.dash()
                #root.manager.current = "homedash"
            Image:
                source: '../assets/ico/menu.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

            #    root.manager.transition.direction = "left"
            #    root.manager.transition.duration = 1
        CircularProgressBar:
            id: cpT
            size_hint: (None, None)
            height: 250
            width: 250
            max: 40
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1, 1, 0
            #cap_precision:3
            thickness: 10
            pos_hint: {'x': .2, 'center_y': .5}
            label: TempLabel
    FloatLayout:
        CircularProgressBar:
            id: cpH
            size_hint: (None, None)
            height: 250
            width: 250
            max: 100
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1,1,0
            #cap_precision:3
            thickness: 10
            pos_hint: {'center_x': .75, 'center_y': .5}
            label: HygroLabel
