 #:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import Label kivy.core.text.Label

#:set TempLabel Label(text="Temperature\n{}\u00B0C", font_size=25, color=(1,1,0.5,1), halign="center")
#:set HygroLabel Label(text="Humidity\n{}%", font_size=25, color=(1,1,0.5,1), halign="center")

<RootScreen>:
    name: "root"
    transition: FadeTransition()
    StartScreen:
    MenuScreen:

<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/dark_plant.jpg'
    Label:
        text: "Welcome to GrowBox"
        font_name: "QuickSand"
        font_size: 55
        color: 10, 1, 100, 39
        pos_hint: {'center_x':.5, 'center_y':.8}
    Button:
        background_normal: ''
        background_color: 1, 1, 0.5, 1
        text: "Start a new growing session"
        color: 100,50,100,1
        font_name: "Amble"
        bold: "true"
        size_hint: 0.4, 0.1
        pos_hint: {'center_x':.5, 'center_y':.25}
        font_size: 35
        on_release: root.manager.current = "menu"


<MenuScreen>:
    name: "menu"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/plant.jpg'
    Label:
        text: "Current session : Tomato"
        font_name: "QuickSand"
        bold: "true"
        font_size: 55
        color: 1, 1, 0, 1
        pos_hint: {'center_x':.5, 'center_y':.9}
    Label:
        text: "Control panel\n5 days before watering"
        halign: "center"
        font_name: "Amble"
        bold: "true"
        font_size: 40
        color: 1,0.8,0,1
        pos_hint: {'center_x': .5, 'center_y': .5}
    FloatLayout:
        CircularProgressBar:
            id: cpT
            size_hint: (None, None)
            height: 300
            width: 300
            max: 40
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1, 1, 0
            cap_style: "SqUArE"
            cap_precision:3
            thickness: 3
            pos_hint: {'x': .15, 'center_y': .5}
            label: TempLabel
    FloatLayout:
        CircularProgressBar:
            id: cpH
            size_hint: (None, None)
            height: 300
            width: 300
            max: 100
            min: 0
            background_colour: 0.26,0.26,0.26
            #progress_colour: 1,1,0
            cap_style: "SqUArE"
            cap_precision:3
            thickness: 3
            pos_hint: {'center_x': .85, 'center_y': .5}
            label: HygroLabel
    FloatLayout:
        Button:
            size_hint: 0.1, 0.1
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.95, 'center_y':.90}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/home.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Button:
            size_hint: 0.1, 0.1
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.95, 'center_y':.95}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/menu.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
