 #:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../img/dark_plant.jpg'

    Label:
        text: "Welcome to GrowBox"
        font_name: "QuickSand"
        font_size: 70
        bold: "true"
        color: 10, 1, 100, 39
        pos_hint: {'center_x':.5, 'center_y':.8}

    Button:
        background_normal: ''
        background_color: 1, 1, 0.5, 1
        text: "Start a new growing session"
        color: 100,50,100,1
        font_name: "Amble"
        bold: "true"
        size_hint: 0.5, 0.2
        pos_hint: {'center_x':.5, 'center_y':.25}
        font_size: 35
        on_press: self.text= "Starting !"
        on_release:root.manager.current = "home"
