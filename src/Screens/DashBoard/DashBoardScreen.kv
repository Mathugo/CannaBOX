<DashScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../img/background_logo.png'
    Button:
        background_normal: ''
        background_color: 0,0,0,0
        pos_hint: {'center_x': .05, 'center_y': .9}
        size_hint: 0.13, 0.2
        on_release:
            root.add_dash()
        Image:
            source: '../assets/ico/menu.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
