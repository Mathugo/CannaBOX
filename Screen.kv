 #:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import Label kivy.core.text.Label

#:set TempLabel Label(text="Temperature\\n{} Â°C", font_size=30, color=(1,1,0.5,1), halign="center")
#:set TempLabel Label(text="Humidity\\n{} %", font_size=30, color=(1,1,0.5,1), halign="center")

<RootScreen>:
    name: "root"
    transition: FadeTransition()
    StartScreen:
    MenuScreen:

<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/dark_plant.jpg'
    Label:
        text: "Welcome to GrowBox"
        font_name: "QuickSand"
        font_size: 55
        color: 10, 1, 100, 39
        pos_hint: {'center_x':.5, 'center_y':.8}
    Button:
        background_normal: ''
        background_color: 0, 0, 0, 0
        text: "Start a new growing session"
        color: 100,50,100,1
        font_name: "Amble"
        bold: "true"
        size_hint: 0.4, 0.1
        pos_hint: {'center_x':.5, 'center_y':.25}
        font_size: 35
        on_release: root.manager.current = "menu"


<MenuScreen>:
    name: "menu"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/plant.jpg'
    Label:
        text: "Current session : Tomato"
        font_name: "QuickSand"
        bold: "true"
        font_size: 55
        color: 0, 150, 255, 1
        pos_hint: {'center_x':.5, 'center_y':.8}

    FloatLayout:
        CircularProgressBarTemp:
            id: cpT
            size_hint: (None, None)
            height: 250
            width: 250
            max: 100
            pos_hint: {'x': .2, 'center_y': .5}
            label: TempLabel
    FloatLayout:
        CircularProgressBarHygro:
            id: cpH
            size_hint: (None, None)
            height: 250
            width: 250
            max: 100
            pos_hint: {'center_x': .8, 'center_y': .5}
            label: HygroLabel
    FloatLayout:
        Button:
            size_hint: 0.1, 0.1
            background_normal: ''
            background_color: 0, 0, 0, 0
            font_size: 30
            pos_hint: {'center_x':.9, 'center_y':.1}
            on_release: root.manager.current = "start"
            Image:
                source: 'assets/exit.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
